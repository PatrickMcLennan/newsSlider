{
  "name": "newsslider",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:pug": "pug pug/src.pug -P -o html/tester.html -w",
    "minify:html": "html-minifier -o html/index.html html/src.html --remove-attribute-quotes --remove-comments --collapse-whitespace",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "watch:js": "webpack -w --mode=development",
    "build:js": "webpack --mode=production",
    "build": "npm-run-all minify:html build:css build:js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "concat": "^1.0.3",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "html-minifier": "^3.5.21",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
